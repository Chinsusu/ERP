# Development Dockerfile with hot reload
FROM golang:1.22-alpine

WORKDIR /app

# Install air for hot reload
RUN go install github.com/cosmtrek/air@latest

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Expose ports
EXPOSE 8082 9082

# Run with air for hot reload
CMD ["air", "-c", ".air.toml"]
