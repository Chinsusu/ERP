# Environment
ENVIRONMENT=production
DOMAIN=erp.company.com

# Security
JWT_SECRET=your-64-char-random-string-change-this-in-production-please
JWT_ACCESS_TOKEN_EXPIRE=15m
JWT_REFRESH_TOKEN_EXPIRE=168h
BOM_ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_strong_password_change_me
POSTGRES_DB=postgres

# Database Names (auto-created by init script)
AUTH_DB_NAME=auth_db
USER_DB_NAME=user_db
MASTER_DATA_DB_NAME=master_data_db
SUPPLIER_DB_NAME=supplier_db
PROCUREMENT_DB_NAME=procurement_db
WMS_DB_NAME=wms_db
MANUFACTURING_DB_NAME=manufacturing_db
SALES_DB_NAME=sales_db
MARKETING_DB_NAME=marketing_db
FINANCE_DB_NAME=finance_db
REPORTING_DB_NAME=reporting_db
NOTIFICATION_DB_NAME=notification_db
AI_DB_NAME=ai_db

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_strong_password_change_me

# NATS
NATS_URL=nats://nats:4222
NATS_CLUSTER_ID=erp-cluster

# MinIO
MINIO_ENDPOINT=minio:9000
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=minio_strong_password_change_me
MINIO_USE_SSL=false

# SMTP (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=noreply@company.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@company.com
SMTP_FROM_NAME=ERP Cosmetics System

# Monitoring
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=grafana_strong_password_change_me
PROMETHEUS_RETENTION_TIME=30d

# API Gateway
API_GATEWAY_PORT=8080
API_GATEWAY_RATE_LIMIT=100

# Service Ports
AUTH_SERVICE_PORT=8081
AUTH_GRPC_PORT=9081
USER_SERVICE_PORT=8082
USER_GRPC_PORT=9082
MASTER_DATA_SERVICE_PORT=8083
MASTER_DATA_GRPC_PORT=9083
SUPPLIER_SERVICE_PORT=8084
SUPPLIER_GRPC_PORT=9084
PROCUREMENT_SERVICE_PORT=8085
PROCUREMENT_GRPC_PORT=9085
WMS_SERVICE_PORT=8086
WMS_GRPC_PORT=9086
MANUFACTURING_SERVICE_PORT=8087
MANUFACTURING_GRPC_PORT=9087
SALES_SERVICE_PORT=8088
SALES_GRPC_PORT=9088
MARKETING_SERVICE_PORT=8089
MARKETING_GRPC_PORT=9089
NOTIFICATION_SERVICE_PORT=8090
NOTIFICATION_GRPC_PORT=9090
FILE_SERVICE_PORT=8091
FILE_GRPC_PORT=9091
REPORTING_SERVICE_PORT=8092
REPORTING_GRPC_PORT=9092
AI_SERVICE_PORT=8093
AI_GRPC_PORT=9093

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://erp.company.com

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Circuit Breaker
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=10s

# Business Rules
ENABLE_FEFO=true
AUTO_APPROVE_MEGA_KOLS=true
CERTIFICATE_EXPIRY_ALERT_DAYS=90,30,7
LICENSE_EXPIRY_ALERT_DAYS=90,30,7
